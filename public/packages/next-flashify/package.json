{
  "name": "@virginus01/next-flashify",
  "version": "1.0.1",
  "description": "NextJS Flash Message",
  "keywords": [
    "nextjs",
    "flash message",
    "toast message"
  ],
  "homepage": "https://github.com/virginus01/next-flashify",
  "bugs": {
    "url": "https://github.com/virginus01/next-flashify/issues"
  },
  "author": "Virginus Alajekwu <info.vsolace@gmail.com> (https://github.com/virginus01)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/virginus01/next-flashify.git"
  },
  "scripts": {
    "build": "tsc",
    "ci": "npm run build && npm run check-format && npm run check-exports && npm run test",
    "format": "prettier --write .",
    "check-format": "prettier --check .",
    "check-exports": "attw --pack . --ignore-rules=cjs-resolves-to-esm --ignore-rules=no-resolution",
    "test": "vitest run --silent",
    "dev": "vitest",
    "local-release": "changeset version && changeset publish",
    "prepublishOnly": "npm run ci"
  },
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "exports": {
    ".": "./dist/index.js",
    "./actions": "./dist/actions/index.js",
    "./components": "./dist/components/index.js",
    "./hooks": "./dist/hooks/index.js"
  },
  "type": "module",
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.17.0",
    "@changesets/cli": "^2.27.10",
    "@types/react": "^18.3.12",
    "prettier": "^3.4.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "typescript": "^5.7.2",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "next": "^15",
    "next-themes": "^0.4.3",
    "react": "^19",
    "sonner": "^1.7"
  }
}
