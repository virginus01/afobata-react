{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ],
      "@/database/*": [
        "./app/api/database/*"
      ],
      "@/api/*": [
        "./app/api/*"
      ],
      "@/api/tenant/*": [
        "./app/api/[tenant]/*"
      ],
      "@/helpers/*": [
        "./app/helpers/*"
      ],
      "@/dashboard/*": [
        "./app/dashboard/*"
      ],
      "@/models/*": [
        "./app/models/*"
      ],
      "@/views/*": [
        "./app/views/*"
      ],
      "@/src/*": [
        "./app/src/*"
      ],
      "@/actions/*": [
        "./app/actions/*"
      ],
      "@/controller/*": [
        "./app/controller/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next.config.js",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}